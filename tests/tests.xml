<?xml version="1.0" encoding="ISO-8859-1"?>
<testdefinition version="0.1">

    <suite name="connman-qt-tests">

        <set name="general">

            <description>General functionality tests</description>

            <case name="ut_manager">
                <description>tests the networkmanager class</description>
                <step>/opt/tests/connman-qt/runtest.sh ut_manager</step>
            </case>

            <case name="ut_clock">
                <description>Tests the ClockModel class</description>
                <step>/opt/tests/connman-qt/runtest.sh ut_clock</step>
            </case>

            <case name="ut_session">
                <description>Tests the NetworkSession and SessionAgent classes</description>
                <step>/opt/tests/connman-qt/runtest.sh ut_session</step>
            </case>

            <case name="ut_technology">
                <description>Tests the NetworkTechnology class</description>
                <step>/opt/tests/connman-qt/runtest.sh ut_technology</step>
            </case>

            <case name="ut_service">
                <description>Tests the NetworkService class</description>
                <step>/opt/tests/connman-qt/runtest.sh ut_service</step>
            </case>

            <case name="ut_agent">
                <description>Tests the UserAgent class</description>
                <step>/opt/tests/connman-qt/runtest.sh ut_agent</step>
            </case>

        </set>

    </suite>

</testdefinition>
